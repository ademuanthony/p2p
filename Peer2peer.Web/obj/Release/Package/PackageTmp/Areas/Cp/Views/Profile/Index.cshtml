@model Peer2peer.Users.User
@{
    ViewBag.Title = "Confirmed";
}

<div id="page-content-wrapper">
    <div id="page-content">

        <div class="container">


            <div id="page-title">
                <h2>Profile</h2>
                <p>Account Information and Settings</p>

            </div>

            <div class="row">
                
                <div class="col-md-6">
                    <div class="panel">
                        <div class="panel-body">
                            <h3 class="title-hero">
                                Basic Detail
                            </h3>
                            <div class="example-box-wrapper">
                                <div class="form-group">
                                    <label class="">Name</label>
                                    <div class="form-control">@Model.Name</div>
                                </div>

                                <div class="form-group">
                                    <label class="">Email</label>
                                    <div class="form-control">@Model.EmailAddress</div>
                                </div>


                                <div class="form-group">
                                    <label>Phone Number</label>
                                    <div class="form-control">@Model.PhoneNumber</div>
                                </div>




                            </div>
                        </div>
                    </div>

                </div>

                <form method="post" action="@Url.Action("ChangeBankAccount")">
                    @Html.AntiForgeryToken()
                    <div class="col-md-6">
                        <div class="panel">
                            <div class="panel-body">
                                <h3 class="title-hero">
                                    Bank Detail
                                </h3>
                                <div class="example-box-wrapper">
                                    <div class="form-group">
                                        <label class="">Bank Name</label>
                                        <input name="BankName" class="form-control" value="@Model.BankName">
                                    </div>

                                    <div class="form-group">
                                        <label class="">Accout Number</label>
                                        <input name="AccountName" class="form-control" value="@Model.AccountName">
                                    </div>


                                    <div class="form-group">
                                        <label>Account Number</label>
                                        <input name="AccountNumber" class="form-control" value="@Model.AccountNumber">
                                    </div>

                                    <button type="submit"
                                            class="btn-primary btn-xs">
                                        Change Bank
                                    </button>

                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

            
            <div class="row">
                <form method="post" action="@Url.Action("ChangePasswrod")">
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="panel">
                            <div class="panel-body">
                                <h3 class="title-hero">
                                    Change PAssword
                                </h3>
                                <div class="example-box-wrapper">
                                    <div class="form-group col-md-3">
                                        <label class="">Old Password</label>
                                        <input name="OldPassword" class="form-control" type="password">
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label class="">New Password</label>
                                        <input name="NewPassword" class="form-control" type="password">
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label class="">Confirm Password</label>
                                        <input name="ConfirmPassword" class="form-control" type="password">
                                    </div>

                                    <div class="form-group col-md-3" style="margin-top: 30px;">
                                        <button type="submit"
                                                class="btn-primary btn-md">
                                            Change Password
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

        </div>

    </div>
</div>